<?xml version="1.0" encoding="UTF-8"?>
<model.grid.GridModel>
  <system>ou</system>
  <module>role</module>
  <code>role</code>
  <name>角色下的用户列表</name>
  <rowsperpage>0</rowsperpage>
  <box>checkbox</box>
  <index>Y</index>
  <pagecontrol>Y</pagecontrol>
  <state>readonly</state>
  <columns>
    <model.grid.ColumnModel>
      <code>pk</code>
      <title>记录号</title>
      <showtype>HIDDEN</showtype>
      <isnotnull>Y</isnotnull>
      <datatype>INTEGER</datatype>
      <align>center</align>
      <width>48</width>
      <length>22</length>
      <precision>0</precision>
    </model.grid.ColumnModel>
    <model.grid.ColumnModel>
      <code>usercode</code>
      <title>用户号</title>
      <showtype>TEXT</showtype>
      <isnotnull>Y</isnotnull>
      <datatype>STRING</datatype>
      <align>center</align>
      <width>80</width>
      <length>32</length>
      <precision>0</precision>
    </model.grid.ColumnModel>
    <model.grid.ColumnModel>
      <code>name</code>
      <title>用户名称</title>
      <showtype>TEXT</showtype>
      <align>center</align>
      <width>120</width>
      <length>0</length>
      <precision>0</precision>
    </model.grid.ColumnModel>
    <model.grid.ColumnModel>
      <code>modifytime</code>
      <title>修改时间</title>
      <showtype>TEXT</showtype>
      <isnotnull>N</isnotnull>
      <datatype>STRING</datatype>
      <align>center</align>
      <width>64</width>
      <length>19</length>
      <precision>0</precision>
    </model.grid.ColumnModel>
    <model.grid.ColumnModel>
      <code>rolecode</code>
      <title>角色号</title>
      <showtype>HIDDEN</showtype>
      <isnotnull>Y</isnotnull>
      <datatype>STRING</datatype>
      <align>center</align>
      <width>48</width>
      <length>32</length>
      <precision>0</precision>
    </model.grid.ColumnModel>
  </columns>
  <opts>
    <model.grid.QueryOptModel>
      <id>role</id>
      <title>角色号</title>
      <field>rolecode</field>
      <type>LINK</type>
      <option>=</option>
      <display>HIDDEN</display>
      <dictid>rolecode</dictid>
    </model.grid.QueryOptModel>
  </opts>
  <actions>
    <model.view.ActionModel>
      <code>add</code>
      <name>增加用户</name>
      <type>POPUP</type>
      <showtype>BUTTON</showtype>
      <href>USER</href>
      <display>ICONTEXT</display>
      <rets>users</rets>
      <operand>ROWS</operand>
      <icon>add.gif</icon>
      <target>_self</target>
      <callback>win.addUsersToRole();</callback>
    </model.view.ActionModel>
    <model.view.ActionModel>
      <code>delete</code>
      <name>删除授权用户</name>
      <type>ROWS</type>
      <showtype>BUTTON</showtype>
      <href>deleteusers</href>
      <display>ICONTEXT</display>
      <operand>ROWS</operand>
      <icon>delete.gif</icon>
      <target>_self</target>
    </model.view.ActionModel>
    <model.view.ActionModel>
      <code>exit</code>
      <name>返回</name>
      <type>URL</type>
      <showtype>BUTTON</showtype>
      <url>role.cmd?$ACTION=list</url>
      <display>ICONTEXT</display>
      <operand>FREE</operand>
      <icon>exit.gif</icon>
      <target>_self</target>
    </model.view.ActionModel>
  </actions>
  <query>
    <business>queryuser</business>
  </query>
</model.grid.GridModel>