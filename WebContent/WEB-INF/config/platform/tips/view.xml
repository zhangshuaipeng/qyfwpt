<?xml version="1.0" encoding="UTF-8"?>
<model.view.ViewModel>
  <system>platform</system>
  <code>tips</code>
  <name>网页消息脚本</name>
  <flow>N</flow>
  <visible>Y</visible>
  <pages>
    <model.view.PageModel>
      <code>welcome</code>
      <name>欢迎消息脚本</name>
      <fields>
        <model.view.FieldModel>
          <code>content</code>
          <name>脚本内容</name>
          <ctrltype>TEXTAREA</ctrltype>
          <height>500</height>
        </model.view.FieldModel>
      </fields>
      <actions>
        <model.view.ActionModel>
          <code>save</code>
          <name>保存</name>
          <type>CUSTOM</type>
          <showtype>BUTTON</showtype>
          <href>savewelcome</href>
          <display>ICONTEXT</display>
          <operand>FREE</operand>
          <icon>save.png</icon>
          <target>_self</target>
        </model.view.ActionModel>
        <model.view.ActionModel>
          <code>exit</code>
          <name>返回</name>
          <type>URL</type>
          <showtype>BUTTON</showtype>
          <url>msgqueue.cmd?$ACTION=list</url>
          <display>ICONTEXT</display>
          <operand>FREE</operand>
          <icon>exit.gif</icon>
          <target>_self</target>
        </model.view.ActionModel>
      </actions>
    </model.view.PageModel>
    <model.view.PageModel>
      <code>poll</code>
      <name>轮询消息脚本</name>
      <fields>
        <model.view.FieldModel>
          <code>content</code>
          <name>消息脚本</name>
          <ctrltype>TEXTAREA</ctrltype>
          <height>500</height>
        </model.view.FieldModel>
      </fields>
      <actions>
        <model.view.ActionModel>
          <code>save</code>
          <name>保存</name>
          <type>CUSTOM</type>
          <showtype>BUTTON</showtype>
          <href>savepoll</href>
          <display>ICONTEXT</display>
          <operand>FREE</operand>
          <icon>save.png</icon>
          <target>_self</target>
        </model.view.ActionModel>
        <model.view.ActionModel>
          <code>exit</code>
          <name>返回</name>
          <type>URL</type>
          <showtype>BUTTON</showtype>
          <url>msgqueue.cmd?$ACTION=list</url>
          <display>ICONTEXT</display>
          <operand>FREE</operand>
          <icon>exit.gif</icon>
          <target>_self</target>
        </model.view.ActionModel>
      </actions>
    </model.view.PageModel>
  </pages>
  <templets>
    <model.view.TempletModel>
      <templet>welcome</templet>
      <templetname>欢迎消息脚本</templetname>
      <page>welcome</page>
      <cols>2</cols>
      <style>form</style>
      <width>720</width>
    </model.view.TempletModel>
    <model.view.TempletModel>
      <templet>poll</templet>
      <templetname>轮询消息</templetname>
      <page>poll</page>
      <cols>2</cols>
      <style>form</style>
      <width>720</width>
    </model.view.TempletModel>
  </templets>
  <control>
    <model.view.ControllerModel>
      <action>readwelcome</action>
      <name>读取欢迎消息脚本</name>
      <roles>developer</roles>
      <exportpage>welcome</exportpage>
      <mode>submit</mode>
      <pull>
        <model.view.HandlerModel>
          <fieldset>SYSTEM</fieldset>
          <business>WebMessageBo.readWelcomeTips</business>
          <retfield>content</retfield>
        </model.view.HandlerModel>
      </pull>
    </model.view.ControllerModel>
    <model.view.ControllerModel>
      <action>savewelcome</action>
      <name>保存欢迎脚本</name>
      <roles>developer</roles>
      <importpage>welcome</importpage>
      <exportpage>welcome</exportpage>
      <mode>ajax</mode>
      <push>
        <model.view.HandlerModel>
          <fieldset>SYSTEM</fieldset>
          <business>WebMessageBo.saveWelcomeTips</business>
          <params>content</params>
        </model.view.HandlerModel>
      </push>
    </model.view.ControllerModel>
    <model.view.ControllerModel>
      <action>readpoll</action>
      <name>读取轮询消息</name>
      <roles>developer</roles>
      <exportpage>poll</exportpage>
      <mode>submit</mode>
      <pull>
        <model.view.HandlerModel>
          <fieldset>SYSTEM</fieldset>
          <business>WebMessageBo.readPollTips</business>
          <retfield>content</retfield>
        </model.view.HandlerModel>
      </pull>
    </model.view.ControllerModel>
    <model.view.ControllerModel>
      <action>savepoll</action>
      <name>保存轮询消息</name>
      <roles>developer</roles>
      <importpage>poll</importpage>
      <exportpage>poll</exportpage>
      <mode>ajax</mode>
      <push>
        <model.view.HandlerModel>
          <fieldset>SYSTEM</fieldset>
          <business>WebMessageBo.savePollTips</business>
          <params>content</params>
        </model.view.HandlerModel>
      </push>
    </model.view.ControllerModel>
  </control>
</model.view.ViewModel>